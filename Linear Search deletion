#include <stdio.h>

int linear_search(int a[], int n, int key) {
    for(int i = 0; i < n; i++) {
        if(a[i] == key)
            return i;  // return index if found
    }
    return -1;  // not found
}

int main() {
    int n, i, key;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    int a[100];  // max size 100
    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++)
        scanf("%d", &a[i]);

    printf("Enter element to delete: ");
    scanf("%d", &key);

    int idx = linear_search(a, n, key);

    if(idx == -1) {
        printf("Element %d not found in the array.\n", key);
    } else {
        // Shift elements to left to delete
        for(i = idx; i < n-1; i++) {
            a[i] = a[i+1];
        }
        n--;  // reduce size

        // Print updated array
        printf("Array after deletion: ");
        for(i = 0; i < n; i++)
            printf("%d ", a[i]);
        printf("\n");
    }

    return 0;
}
