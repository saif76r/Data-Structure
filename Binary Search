#include <stdio.h>

int main() {
    int n, i, target, l, r, mid, found = 0;

    printf("Enter array size: ");
    scanf("%d", &n);

    int arr[n];
    printf("Enter %d elements :\n", n);
    for (i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    printf("Enter the element to search: ");
    scanf("%d", &target);

    l = 0;
    r = n - 1;

    while (l <= r) {
        mid = l + (r - l) / 2; 

        if (arr[mid] == target) {
            found = 1;
            break;
        } else if (arr[mid] < target) {
            l = mid + 1; 
        } else {
            r = mid - 1; 
        }
    }

    if (found)
        printf("Element found at index %d\n", mid);
    else
        printf("Element not found\n");

    return 0;
}
