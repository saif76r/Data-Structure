#include <stdio.h>

int linear_search(int a[], int n, int key) {
    for(int i = 0; i < n; i++) {
        if(a[i] == key)
            return i;  // return index if found
    }
    return -1;  // not found
}

int main() {
    int n, i, key, pos, value;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    int a[100];  // max size 100
    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++)
        scanf("%d", &a[i]);

    printf("Enter element to search: ");
    scanf("%d", &key);

    int idx = linear_search(a, n, key);

    if(idx != -1) {
        printf("Element %d found at position %d\n", key, idx+1);
    } else {
        printf("Element not found. Enter value to insert: ");
        scanf("%d", &value);

        printf("Enter position to insert (1 to %d): ", n+1);
        scanf("%d", &pos);

        if(pos < 1 || pos > n+1) {
            printf("Invalid position!\n");
        } else {
            // Shift elements to right to make space
            for(i = n; i >= pos; i--) {
                a[i] = a[i-1];
            }
            a[pos-1] = value;
            n++;  // increase array size

            // Print updated array
            printf("Array after insertion: ");
            for(i = 0; i < n; i++)
                printf("%d ", a[i]);
            printf("\n");
        }
    }

    return 0;
}
